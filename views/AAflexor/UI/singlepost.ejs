

<%- include("../includes/header.ejs") %>
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/taksho/posts">مقاله و پادکست</a></li>
        <li>همه مقالات</li>
      </ol>
      <h2> مقالات </h2>
    </div>
  </section><!-- End Breadcrumbs -->
<!-- Page Content -->
<div class="container mt-5">
        <!-- ======= Breadcrumbs ======= -->
  
    <div class="row">
        <div class="col-md-0"></div>
        <div class="col-md-9">
            <div class="row">
                <!-- Post Content Column -->
                <div class="col">
                    <!-- Title -->
                    <h1 class="mt-4"><%= post.title %></h1>
        
                    <!-- Author -->
                    <p class="lead">
                        نوشته شده توسط :
                        <a href="#"><%= post.user.adminName %> <%= post.user.adminLastName %></a>
                    </p>
        
                    <hr />
        
                    <!-- Date/Time -->
                    <p>تاریخ انتشار :  <%=formatDate(post.createdAt) %> </p>
        
                    <hr />
        
                    <!-- Preview Image -->
                    <div class="text-center">
                        <img
                            class="img-fluid rounded"
                            src="http://localhost:3000/uploads/thumbnails/<%= post.thumbnail %>"
                            alt=""
                        />
                    </div>
        
                    <hr />
        
                    <!-- Post Content -->
                    <p class="text-justify"><%- post.body %></p>
        
                    <hr />
        
                    <!-- Comments Form -->
                    <div class="card my-4">
                        <h5 class="card-header">نظر خود را بنویسید:</h5>
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <textarea class="form-control" rows="3"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    ثبت نظر
                                </button>
                            </form>
                        </div>
                    </div>
        
                    <!-- Single Comment -->
                    <div class="media mb-4">
                        <img
                            class="d-flex mr-3 rounded-circle"
                            src="http://placehold.it/50x50"
                            alt=""
                        />
                        <div class="media-body">
                            <h5 class="mt-0">مریم حسینی</h5>
                            این یک نظر تست می باشد
                        </div>
                    </div>
        
                    <!-- Comment with nested comments -->
                    <div class="media mb-4">
                        <img
                            class="d-flex mr-3 rounded-circle"
                            src="http://placehold.it/50x50"
                            alt=""
                        />
                        <div class="media-body">
                            <h5 class="mt-0">محمد  شکوهی</h5>
                            نظر تست
        
                            <div class="media mt-4">
                                <img
                                    class="d-flex mr-3 rounded-circle"
                                    src="http://placehold.it/50x50"
                                    alt=""
                                />
                                <div class="media-body">
                                    <h5 class="mt-0">سکینه خوشنویس</h5>
                                    نظر تست
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">

            <div id="carouselExampleIndicators" class="carousel slide  " data-bs-ride="carousel">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/img/Untitled-4.gif" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                 <img src="/img/Untitled-5.gif" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="/img/Untitled-6.gif" class="d-block w-100" alt="...">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>

        </div>
    </div>
    
        
    </div>
    <%- include('../includes/footer.ejs') %>