

        <div >
            <div class="w-100 text-center mx-auto">
         
            </div>
            <form class="mx-auto w-100 " action="/contact" method="post">
                <h1 class=" text-center animation zoomIn "> <span class="animated zoomIn w-50 badge badge-info">تماس با ما</span></h1>
                    
    
                    <!-- Name input-->
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="name">نام و نام خانوادگی</label>
                        <div class="col-md-12">
                            <input
                                id="name"
                                name="fullname"
                                type="text"
                                placeholder="نام و نام خانوادگی"
                                class="form-control"
                            />
                        </div>
                    </div>
    
                    <!-- Email input-->
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="email"
                            >آدرس ایمیل</label
                        >
                        <div class="col-md-12">
                            <input
                                id="email"
                                name="email"
                                type="text"
                                placeholder="ایمیل شما"
                                class="form-control"
                            />
                        </div>
                    </div>
    
                    <!-- Message body -->
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="message"
                            >پیام شما</label
                        >
                        <div class="col-md-12">
                            <textarea
                                class="form-control"
                                id="message"
                                name="message"
                                placeholder="لطفاً پیام را در اینجا نوشته و ارسال کنید"
                                rows="5"
                            ></textarea>
                        </div>
                    </div>
                    <div class="w-25 text-center col-md-12">
                        <img src="/captcha.png" class="mb-3" alt="captcha" />
                        <input
                            type="text"
                            class="form-control"
                            name="captcha"
                            placeholder="کد امنیتی"
                        />
                    </div>
    
                    <!-- Form actions -->
                    
<button type="button" class="btn btn-success  mt-3 " data-toggle="modal" data-target="#basicExampleModal">
    ویرایش  مشخصات مشاور
</button>
<!-- Modal -->
<div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
<div class="modal-content">
<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">تایید ویرایش </h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body rtl">
  آیا از ویرایش مشخصات مشاور اطمینان دارید؟
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">خیر </button>
  <button class="btn btn-info " type="submit">ویرایش</button>
</div>
</div>
</div>
</div>
