<br/>
<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <%- include("../includes/validationErrors.ejs") %>
    </div>
    <div class="col-md-3">
    </div>
</div>

<div class="d-flex align-items-center justify-content-center">

    <form action="/dashboard/editProduct/<%= product._id %>" class="w-50" method="POST" enctype="multipart/form-data">
        <br/>
        <br/>
        <div class="form-group">        
            <label for="title">نام محصول</label>
            <input

                type="text"
                class="form-control w-100"
                name="productName"
                id="productName"
                value="<%= product.productName %>"
            />
        </div>

        <div class="form-group">
            <label for="title">توضیح کوتاه در مورد محصول</label>
            <input
                type="text"
                class="form-control w-100"
                name="productLittleTitle"
                id="productLittleTitle"
                value="<%= product.productLittleTitle %>"
            />
        </div>

        <div class="form-group">
            <label for="title">قیمت محصول</label>
            <input
                type="number"
                class="form-control w-100"
                name="productPrice"
                id="productPrice"
                value="<%= product.productPrice %>"
            />
        </div>


        <div class="form-group">
            <label for="title">تخفیف محصول</label>
            <input
                type="number"
                class="form-control w-100"
                name="productOffer"
                id="productOffer"
                value="<%= product.productOffer %>"
            />
        </div>


        <div class="form-group">
            <label for="title">تعداد محصول موجود برای فروش</label>
            <input
                type="number"
                class="form-control w-100"
                name="productCount"
                id="productCount"
                value="<%= product.productCount %>"
            />
        </div>


        <label for="selectedThumbnail">عکس بند انگشتی</label>

        <div class="input-group mb-3">
          <input
              type="file"
              class="custom-file-input"
              name="thumbnail"
              id="selectedThumbnail"
              aria-describedby="inputGroupFileAddon03" />
          <label
              id="thumbStatus"
              class="custom-file-label"
              for="inputGroupFile03"
              >عکس مورد نظر را انتخاب کنید</label>
        </div>
        

        <div class="form-group">
            <label for="productAvailable"> وضعیت موجودی</label>
            <select name="productAvailable" class="form-control w-25" id="productAvailable">
                <option value="<%= product.productAvailable %>" selected><%= product.productAvailable === "0" ? "نا موجود" : "موجود" %></option>
                <option value="<%= product.productAvailable === "1" ? "0":"1" %>"> <%= product.productAvailable === "1" ? "نا موجود" : "موجود" %></option>
            </select>
        </div>


        <div class="form-group">
            <label for="productCategory"> دسته بندی محصول </label>
            <select name="productCategory" class="form-control w-25" id="productCategory">

                <option value=1 selected >غیره</option>
                <option value=2>آموزشی</option>
                <option value=3>خبری</option>
                <option value=4>انگیزشی</option>
                <option value=5>برنامه ریزی</option>

                
            </select>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button
                    class="btn btn-sm btn-outline-secondary"
                    type="button"
                    id="imageUpload"
                >
                    آپلود عکس
                </button>
            </div>
            <div class="custom-file">
                <input
                    type="file"
                    class="custom-file-input"
                    id="selectedImage"
                />
                <label
                    id="imageStatus"
                    class="custom-file-label"
                    for="selectedImage"
                >
                    عکس مورد نظر را انتخاب کنید
                </label>
            </div>
        </div>

        <div id="progressDiv" style="display: none">
            <div class="progress">
                <div
                    id="progressBar"
                    class="progress-bar progress-bar-striped progress-bar-animated"
                    role="progressbar"
                    aria-valuemin="0"
                    aria-valuemax="100"
                ></div>
            </div>
        </div>


        <div class="w-100 bg-light text-center">
            <p id="uploadResult" class="overflow-auto">آدرس عکس آپلود شده</p>
        </div>


        <div class="form-group">
            <h5>توضیحات محصول</h5>
            <textarea name="productContent" class="form-control" id="productContent"  ><%= product.productContent %></textarea>
        </div>

        <div class="row d-flex flex-row">
            <div class="col-md-8"> 
                
                <button type="button" class="btn btn-success w-100  " data-toggle="modal" data-target="#basicExampleModal">
                 ساخت پست جدید
                     </button>
            <!-- Modal -->
            <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">تایید  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body rtl">
                  آیا از ثبت پست جدید اطمینان دارید؟
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">خیر </button>
                  <button class="btn btn-info " type="submit">ثبت</button>
                </div>
              </div>
            </div>
            </div>
            
            </div>

            <div class="col-md-4"> <a href="/dashboard/getProduct" class="btn btn-block btn-warning ">انصراف</a></div>
         
   
        </div>
    </form>
</div>
