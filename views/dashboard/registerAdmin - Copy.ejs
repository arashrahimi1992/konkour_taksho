<div class="row">
    <div class="col-md-3">
    
    </div>
    <div class="col-md-6">
   
        <!-- Default form register -->
<form class="text-center p-5" action="/dashboard/register" method="POST">
  <h2 class=" rtl mt-2 mb-4"><span class="badge badge-info w-100"> ثبت ادمین جدید </span></h2>
    <%- include("../includes/validationErrors.ejs") %>


    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input type="text" id="adminName" name="adminName" class="form-control" placeholder="*نام ">
        </div>
        <div class="col">
            <!-- Last name -->
            <input type="text"  id="adminLastName" name="adminLastName" class="form-control" placeholder="*نام خانوادگی">
        </div>
    </div>

    <!-- E-mail -->
    <input type="email" id="adminEmail"  name="adminEmail" class="form-control mb-4" placeholder="*ایمیل ">

    <!-- Password -->
    <input type="password" id="adminPassword" name="adminPassword" class="form-control" placeholder="*کلمه ی عبور" aria-describedby="defaultRegisterFormPasswordHelpBlock">
    <small id="defaultRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4 ">
         *نباید کمتر از 6 کاراکتر باشد
    </small>

    <!-- Password -->
    <input type="password" id="adminConfirmPassword" name="adminConfirmPassword" class="form-control" placeholder="*تکرار کلمه ی عبور " aria-describedby="defaultRegisterFormPasswordHelpBlock">


    <!-- Phone number -->
    <input type="text" id="adminPhone" name="adminPhone" class="form-control mt-3 mb-3" placeholder="شماره تلفن" aria-describedby="defaultRegisterFormPhoneHelpBlock">
    

    <!-- Sign up button -->
    <!-- <button class="btn btn-info my-4 btn-block" type="submit">ثبت نام</button> -->


    <button type="button" class="btn btn-success w-50  " data-toggle="modal" data-target="#basicExampleModal">
     ثبت نام
      </button>
      
      <!-- Modal -->
      <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">تایید ثبت نام </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body rtl">
              آیا از ثبت نام ادمین جدید اطمینان دارید؟
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">خیر </button>
              <button class="btn btn-info " type="submit">ثبت نام</button>
            </div>
          </div>
        </div>
      </div>

</form>
<!-- Default form register -->
    </div>
    <div class="col-md-3">
        
    </div>
</div>


